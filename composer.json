{ 
    // "name": "pantheon-upstreams/drupal-composer-managed",
    // "description": "Install Drupal 9 with Composer on Pantheon.",
    "type": "project",
    "config": {
        "vendor-dir": "content/vendor"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "wpackagist-plugin/akismet": "^5.3.1",
        "wpackagist-plugin/beehive-analytics": "^3.4.11",
        "wpackagist-plugin/better-search-replace": "^1.4.5",
        "wpackagist-plugin/jetpack": "^13.2-a.5",
        "wpackagist-plugin/redirection": "^5.4.2",
        "wpackagist-plugin/wordpress-importer": "^0.8.2",
        "wpackagist-plugin/wp-mail-smtp": "^3.11.1",
        "wpackagist-plugin/wp-reroute-email": "^1.5.0",
        "wpackagist-plugin/wp-saml-auth": "^2.1.4",
        "wpackagist-plugin/wp-serverinfo": "^1.66",                  // Developer Plugin
        "wpackagist-plugin/show-hooks": "^0.4",                      // Developer Plugin
        "wpackagist-plugin/simply-show-hooks": "^1.2.1",             // Developer Plugin
        "wpackagist-plugin/what-template-file-am-i-viewing": "^1.2", // Developer Plugin
        "wpackagist-theme/twentytwentyfour": "^1.0"
    },
    "extra": {
        "installer-paths": {
            "content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    }
}
